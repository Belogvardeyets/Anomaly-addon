[logic]
active = remark@greet
on_death = death
on_hit = hit

[death]
on_info = %+buryy_dead%

[hit]
on_info = {=hit_by_actor} %+buryy_dialog_done%

[remark@greet]
anim = wait_na
target = story | actor
danger = danger_condition
combat_ignore_cond = {=check_npc_name(buryy_unique) -buryy_dialog_done} true
combat_ignore_keep_helpers = true
meet = meet
on_info = {+buryy_dialog_done} remark@attack

[remark@attack]
anim = threat_fire
target = story | actor
on_info = {=dist_to_actor_ge(80)} nil

[meet]
close_anim 		= nil
close_victim 	= nil
far_anim 		= nil
far_victim 		= nil
close_distance  = 0
far_distance 	= 0
use = {-buryy_dialog_done} true, false
allow_break     = false
trade_enable    = false
meet_dialog     = buryy_dialog

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0
